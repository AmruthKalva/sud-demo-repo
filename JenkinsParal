pipeline {
	agent none 
	triggers {
		cron '* * * * * '
		upstream 'pipeline-demo'
	}
	stages {
		stage('Stage-1') {
      			agent {label 'master'}
			steps {
				sh 'sleep 60'
       				echo 'sh mkdir master-1'
			}
		}
		stage('Deploy') {
    			  agent {label 'java_node'}
			steps {
				sh 'sleep 60'
       				echo 'sh mkdir master-1'
			}
		}
	}
}
