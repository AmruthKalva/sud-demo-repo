pipeline {
	agent none 
	
	stages {
		stage('ParallelJobs') {
      			agent {label 'master'}
			parallel {
			stage(Stage-1A){
                             steps {
				sh 'sleep 120'
			     }
			}
			stage(Stage-1B){
                             steps {
				sh 'sleep 120'
			     }
			}		
			}
		}
		stage('Deploy') {
    			  agent {label 'java_node'}
			steps {
				sh 'sleep 60'
       				echo 'sh mkdir master-1'
			}
		}
	}
}
